{
  "name": "voice-of-the-dungeon",
  "productName": "Voice of the Dungeon",
  "version": "0.1.0",
  "type": "commonjs",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"tsc -w -p tsconfig.main.json\" \"vite\" \"wait-on tcp:5173 dist/main/main.js && node scripts/run-electron.js\"",
    "start": "npm run dev",
    "build": "tsc -p tsconfig.main.json && vite build",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^40.1.0",
    "typescript": "^5.4.3",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  }
}
